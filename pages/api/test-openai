export default async function handler(req, res) {
  try {
    const response = await fetch("https://api.openai.com/v1/responses", {
      method: "POST",
      headers: {
        "Authorization": `Bearer ${process.env.OPENAI_API_KEY}`,
        "Content-Type": "application/json",
      },
      body: JSON.stringify({
        model: "gpt-4o-mini",
        assistant_id: "asst_wFyjNuN4onfcvMhdSURVPmk1", // üëà your JoeGPT Assistant ID
        input: "Say 'Hello from JoeGPT!' if you can read this.",
      }),
    });

    const data = await response.json();
    const answer =
      data?.output?.[0]?.content?.[0]?.text || "‚ùå No response from OpenAI.";

    return res.status(200).json({ test: answer, raw: data });
  } catch (err) {
    console.error("test-openai error:", err);
    return res.status(500).json({ error: err.message });
  }
}
